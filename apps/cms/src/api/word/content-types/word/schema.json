  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "term": {
      "type": "string",
      "required": true
    },
    "translation": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "distractor1": {
      "type": "string"
    },
    "lesson": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::lesson.lesson",
      "inversedBy": "words"
    },
    "level": {
      "type": "enumeration",
      "required": false,
      "default": "A1-A2",
      "enum": [
        "A1-A2",
        "B1-B2",
        "C1"
      ]
    }
  }
