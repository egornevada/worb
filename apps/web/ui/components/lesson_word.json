{
  "type": "container",
  "variables": [
    { "name": "term", "type": "string", "default_value": "Заголовок" },
    { "name": "image_url", "type": "string", "default_value": "https://dummyimage.com/512x512/eeeeee/aaaaaa.png&text=img" }
  ],
  "orientation": "vertical",
  "width": { "type": "match_parent" },
  "height": { "type": "match_parent" },
  "content_alignment_horizontal": "center",
  "content_alignment_vertical": "top",
  "paddings": { "top": 8, "right": 8, "bottom": 8, "left": 8 },
  "items": [
    {
      "type": "image",
      "id": "word_image",
      "image_url_variable": "image_url",
      "scale": "fit",
      "width": { "type": "match_parent" },
      "height": { "type": "match_parent" },
      "alignment_horizontal": "center",
      "alignment_vertical": "center",
      "preload_required": true,
      "weight": 1,
      "margins": { "bottom": 8 }
    },
    {
      "type": "text",
      "id": "word_term",
      "text_variable": "term",
      "width": { "type": "match_parent" },
      "text_alignment_horizontal": "center",
      "font_size": 24,
      "line_height": 28,
      "max_lines": 1,
      "margins": { "top": 8, "bottom": 8 }
    }
  ]
}