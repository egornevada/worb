{
  "card": {
    "log_id": "lesson",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "vertical",
          "width": { "type": "match_parent" },
          "height": { "type": "match_parent" },
          "variables": [
            { "name": "progress_done_weight", "type": "number", "default_value": 0 },
            { "name": "progress_rest_weight", "type": "number", "default_value": 10 }
          ],
          "paddings": { "top": 16, "bottom": 24 },
          "items": [
            {
              "type": "container",
              "width": { "type": "match_parent" },
              "height": { "type": "wrap_content" },
              "items": [
                {
                  "$include": {
                    "path": "/components/header_lesson.json",
                    "patch": [
                      { "id": "progress_done", "set": { "weight": "@{progress_done_weight}" } },
                      { "id": "progress_rest", "set": { "weight": "@{progress_rest_weight}" } }
                    ]
                  }
                }
              ]
            },
            {
              "type": "container",
              "id": "lesson_main",
              "orientation": "vertical",
              "width": { "type": "match_parent" },
              "height": { "type": "match_parent" },
              "paddings": { "left": 16, "right": 16, "top": 8, "bottom": 8 },
              "items": [
                {
                  "$include": {
                    "path": "/components/lesson_word.json",
                    "patch": [
                      {
                        "id": "lesson_image",
                        "set": {
                          "content_mode": "scale_to_fit",
                          "width": { "type": "match_parent" },
                          "height": { "type": "match_parent" }
                        }
                      },
                      {
                        "id": "word_image",
                        "set": {
                          "content_mode": "scale_to_fit",
                          "width": { "type": "match_parent" },
                          "height": { "type": "match_parent" }
                        }
                      },
                      {
                        "id": "picture",
                        "set": {
                          "content_mode": "scale_to_fit",
                          "width": { "type": "match_parent" },
                          "height": { "type": "match_parent" }
                        }
                      }
                    ]
                  }
                },
                { "$include": "/components/lesson_buttons.json" }
              ]
            },
            {
              "type": "container",
              "width": { "type": "match_parent" },
              "height": { "type": "wrap_content" },
              "items": [
                { "$include": "/components/lesson_check_button.json" }
              ]
            }
          ]
        }
      }
    ]
  }
}